      "url": "/questions",
      "icons": [
        {
          "src": "/logo.svg",
          "sizes": "192x192",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/community",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
